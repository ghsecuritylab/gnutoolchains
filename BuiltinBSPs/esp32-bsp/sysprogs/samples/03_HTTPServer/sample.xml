<?xml version="1.0"?>
<EmbeddedProjectSample xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<Name>HTTP Server</Name>
	<Description>This project demonstrates a very basic HTTP server using the lwIP API under FreeRTOS.</Description>
	<MCUFilterRegex>ESP32$</MCUFilterRegex>
	<ConfigurableProperties>
	<PropertyGroups>
	<PropertyGroup>
	  <Properties>
		<PropertyEntry xsi:type="Integral">
		  <Name>Subnet number (192.168.N.1)</Name>
		  <UniqueID>com.sysprogs.esp32.http.subnet</UniqueID>
		  <Description>Specifies the subnet number used by the demo</Description>
		  <DefaultValue>123</DefaultValue>
		  <MinValue>0</MinValue>
		  <MaxValue>255</MaxValue>
		</PropertyEntry>
		<PropertyEntry xsi:type="String">
		  <Name>WiFi Network Name</Name>
		  <UniqueID>com.sysprogs.esp32.http.ssid</UniqueID>
		  <Description>Specifies the wireless network name (SSID)</Description>
		  <DefaultValue>ESP32_VisualGDB</DefaultValue>
		</PropertyEntry>
	  </Properties>
	  <CollapsedByDefault>false</CollapsedByDefault>
	</PropertyGroup>
	</PropertyGroups>
	</ConfigurableProperties>
	<CLanguageStandard>gnu99</CLanguageStandard>
	<CPPLanguageStandard>gnu++11</CPPLanguageStandard>
	<RequiredFrameworks>
		<string>com.sysprogs.esp32.idf.core</string>
		<string>com.sysprogs.esp32.idf.expat</string>
		<string>com.sysprogs.esp32.idf.nvs_flash</string>
		<string>com.sysprogs.esp32.idf.lwip</string>
		<string>com.sysprogs.esp32.idf.newlib</string>
		<string>com.sysprogs.esp32.idf.wpa_supplicant</string>
		<string>com.sysprogs.esp32.idf.app_update</string>
		<string>com.sysprogs.esp32.idf.driver</string>
		<string>com.sysprogs.esp32.idf.ethernet</string>
		<string>com.sysprogs.esp32.idf.freertos</string>
		<string>com.sysprogs.esp32.idf.json</string>
		<string>com.sysprogs.esp32.idf.log</string>
		<string>com.sysprogs.esp32.idf.mbedtls</string>
		<string>com.sysprogs.esp32.idf.spi_flash</string>
		<string>com.sysprogs.esp32.idf.tcpip_adapter</string>
		<string>com.sysprogs.esp32.idf.ulp</string>
		<string>com.sysprogs.esp32.idf.vfs</string>
		<string>com.sysprogs.esp32.idf.soc</string>
		<string>com.sysprogs.esp32.idf.xtensa-debug-module</string>
	</RequiredFrameworks>
</EmbeddedProjectSample>